{
  "name": "concept-stock-screener-tests",
  "version": "2.0.0",
  "description": "概念股篩選系統測試套件",
  "main": "tests/run-tests.js",
  "scripts": {
    "test": "node tests/run-tests.js all",
    "test:unit": "node tests/run-tests.js unit",
    "test:integration": "node tests/run-tests.js integration",
    "test:e2e": "node tests/run-tests.js e2e",
    "test:performance": "node tests/run-tests.js performance",
    "test:coverage": "node tests/run-tests.js coverage",
    "test:report": "node tests/run-tests.js report",
    "test:clean": "node tests/run-tests.js clean",
    "jest": "jest",
    "jest:unit": "jest tests/unit",
    "jest:integration": "jest tests/integration",
    "jest:e2e": "jest tests/e2e",
    "jest:performance": "jest tests/performance",
    "jest:coverage": "jest --coverage",
    "jest:watch": "jest --watch",
    "jest:debug": "jest --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "@types/jest": "^29.5.8",
    "axios": "^1.6.0",
    "supertest": "^6.3.3",
    "@playwright/test": "^1.40.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/legacy/**",
      "!**/*.config.js"
    ],
    "coverageDirectory": "tests/coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "roots": [
      "<rootDir>/tests/unit",
      "<rootDir>/tests/integration",
      "<rootDir>/tests/e2e",
      "<rootDir>/tests/performance"
    ],
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "tests/reports",
        "outputName": "junit.xml",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}",
        "ancestorSeparator": " › ",
        "usePathForSuiteName": true
      }]
    ]
  },
  "keywords": [
    "testing",
    "jest",
    "unit-testing",
    "integration-testing",
    "e2e-testing",
    "performance-testing",
    "stock-screener",
    "concept-stocks"
  ],
  "author": "Concept Stock Screener Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
