{
  "name": "concept-stock-screener",
  "version": "1.0.0",
  "description": "概念股自動化篩選系統",
  "private": true,
  "scripts": {
    "dev": "echo '開發環境設置中，請參考 docs-new/quick-start/QUICK_START_GUIDE.md'",
    "build": "echo '構建流程設置中，請參考 docs-new/development/CI_CD_PIPELINE_DESIGN.md'",
    "test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "test:unit": "jest --testPathPatterns=unit --passWithNoTests",
    "test:integration": "jest --testPathPatterns=integration --passWithNoTests",
    "test:e2e": "jest --testPathPatterns=e2e --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "echo '代碼檢查流程設置中，請參考 docs-new/development/CI_CD_PIPELINE_DESIGN.md'",
    "clean": "echo '清理流程設置中'",
    "setup:macos": "./scripts/setup-macos.sh",
    "setup:windows": "./scripts/quick-start-windows.ps1",
    "quick:macos": "./scripts/quick-start-macos.sh"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "babel-jest": "^30.1.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "stock",
    "ai",
    "taiwan",
    "investment",
    "concepts",
    "screener"
  ],
  "author": "Concept Stock Screener Team",
  "license": "MIT"
}
