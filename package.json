{
  "name": "concept-stock-screener",
  "version": "1.0.0",
  "description": "概念股自動化篩選系統",
  "private": true,
  "scripts": {
    "dev": "pnpm run dev:web",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:pipeline": "pnpm --filter data-pipeline dev",
    "dev:all": "pnpm run --parallel dev:web dev:api",
    "build": "pnpm run build:types && pnpm run build:ui && pnpm run build:web && pnpm run build:api",
    "build:types": "pnpm --filter types build",
    "build:ui": "pnpm --filter ui build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "test:unit": "jest packages/ui/src/components/__tests__/Button.test.tsx packages/ui/src/components/__tests__/Input.test.tsx packages/ui/src/hooks/__tests__/useApi.test.tsx",
    "test:integration": "jest --testPathPatterns=integration --passWithNoTests",
    "test:e2e": "jest --testPathPatterns=e2e --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "pnpm run lint:check",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "pnpm run format:check",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "pnpm run type-check:types && pnpm run type-check:ui && pnpm run type-check:web && pnpm run type-check:api",
    "type-check:types": "pnpm --filter types type-check",
    "type-check:ui": "pnpm --filter ui type-check",
    "type-check:web": "pnpm --filter web type-check",
    "type-check:api": "pnpm --filter api type-check",
    "clean": "pnpm run clean:all",
    "clean:all": "pnpm run clean:dist && pnpm run clean:node_modules && pnpm run clean:coverage",
    "clean:dist": "pnpm run --recursive clean",
    "clean:node_modules": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules",
    "clean:coverage": "rm -rf coverage",
    "setup:macos": "./scripts/setup-macos.sh",
    "setup:windows": "./scripts/quick-start-windows.ps1",
    "quick:macos": "./scripts/quick-start-macos.sh",
    "deploy:dev": "./scripts/deployment/deploy-dev.sh",
    "deploy:dev:force": "./scripts/deployment/deploy-dev.sh --force",
    "health:check": "./scripts/deployment/health-check-dev.sh",
    "monitor:dev": "./scripts/deployment/monitor-dev.sh",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.28.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^30.1.2",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "stock",
    "ai",
    "taiwan",
    "investment",
    "concepts",
    "screener"
  ],
  "author": "Concept Stock Screener Team",
  "license": "MIT"
}
