{
  "name": "@concept/mcp-tools",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP servers for Pinecone, Cloudflare, and Vercel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "start": "node dist/index.js",
    "start:pinecone": "node dist/pinecone.js",
    "start:cloudflare": "node dist/cloudflare.js",
    "start:vercel": "node dist/vercel.js",
    "dev:pinecone": "tsx src/pinecone.ts",
    "dev:cloudflare": "tsx src/cloudflare.ts",
    "dev:vercel": "tsx src/vercel.ts",
    "dev:all": "pnpm run --parallel dev:pinecone dev:cloudflare dev:vercel",
    "start:all": "pnpm run --parallel start:pinecone start:cloudflare start:vercel"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.2.0",
    "@pinecone-database/pinecone": "^3.0.1",
    "dotenv": "^17.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
